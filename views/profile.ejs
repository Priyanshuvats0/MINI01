<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
    <div class="flex justify-end w-full">
      <a href="/logout" class="bg-red-500 rounded-md px-3 py-3 text-sm inline-block mb-5">Log out</a>
    </div>
   
    <h3 class="text-3xl mb-5">Hello, <%=user.name%></h3>
    <h5 class="mb-5">You can create a new post</h5>
   <form action="/post" method="post">
    <textarea class="p-3 outine-none w-1/3 resize-none bg-transparent border-2 border-zinc-800 block rounded-md"name="content" id="" placeholder="whats in your mind"></textarea>
    <input type="submit" class="mt-5 rounded-md px=3 py-2 text-sm bg-blue-500 w-40 block" value="create new post">
   </form>
   <div class="posts mt-20">
     <h3 class="text-zinc-400">Your Posts</h3>
     <div class="post-container mt-5">
      <% user.posts.reverse().forEach(function(post){%>
        <div class="post mb-4 w-1/3 p-4 border-2 rounded-md bg-zinc-800 border-zinc-700">
          <h4 class="text-blue-500 mb-2 text-sm tracking-tight">@<%=user.username%></h4>
          <p><%=post.content%></p>
          <small class="mt-3 inline-block"><%=post.likes.length%></small>
          <div class="btns flex gap-4 mt-1">
            <a class="text-blue-500" href="/like/<%=post._id%>">
              <%=post.likes.indexOf(user._id)===-1? "Like":"Unlike"%>
            </a>
            <a class="text-zinc-600"href="/edit/<%=post._id%>">edit</a>
          </div>
        </div>
     <% })%>
   </div>
  </div>
</body>
</html>